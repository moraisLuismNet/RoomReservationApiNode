{
  "name": "room-reservation-api-node",
  "version": "1.0.0",
  "description": "Room Reservation API with TypeScript and PostgreSQL",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only --ignore-watch node_modules src/server.ts",
    "lint": "eslint . --ext .ts",
    "test": "jest",
    "migrate": "npm run migration:run",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js",
    "migration:generate": "npm run typeorm -- migration:generate -d src/config/data/data-source.ts",
    "migration:run": "npm run typeorm -- migration:run -d src/config/data/data-source.ts",
    "migration:revert": "npm run typeorm -- migration:revert -d src/config/data/data-source.ts",
    "db:diagnose": "ts-node src/utils/diagnose-db.ts",
    "db:fix-sequences": "ts-node src/utils/fix-sequences.ts",
    "db:create": "ts-node scripts/create-db.ts",
    "db:seed": "ts-node scripts/seed-db.ts",
    "email:check-config": "ts-node scripts/check-email-conf.ts"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "mongodb": "^6.21.0",
    "morgan": "^1.10.0",
    "mssql": "^12.2.0",
    "mysql2": "^3.16.0",
    "pg": "^8.10.0",
    "pg-hstore": "^2.3.4",
    "reflect-metadata": "^0.1.14",
    "sqlite3": "^5.1.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "typeorm": "^0.3.28",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.15.11",
    "@types/pg": "^8.16.0",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.38.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.4"
  }
}
